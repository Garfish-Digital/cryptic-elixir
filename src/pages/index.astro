---
// src/pages/index.astro
// This is your main homepage.
// It uses the BaseLayout for consistent structure.
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import Button from '../components/common/Button.astro';
import AnimatedHero from '../components/interactive/AnimatedHero.astro'; // Will create this soon
---

<BaseLayout title="Home - My Advanced Template">
  <Header />

  <main class="container mx-auto p-4 py-12">
    <section class="text-center mb-16">
      <h1 class="text-5xl font-bold text-gray-800 mb-4">
        Welcome to Your Advanced Astro Template!
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        A powerful foundation for cutting-edge web experiences.
      </p>
      <Button text="Explore Features" href="#features" />
    </section>

    <section id="features" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-2">Flexible Layouts</h2>
        <p class="text-gray-700">Ready for Bento box, broken grid, and custom designs with Tailwind CSS.</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-2">Dynamic Animations</h2>
        <p class="text-gray-700">Integrate GSAP, WebGL, Three.js, and more for stunning effects.</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-2">Media Rich</h2>
        <p class="text-gray-700">Seamlessly embed video, audio, and interactive elements.</p>
      </div>
    </section>

    <!-- Example of an interactive component placeholder -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-center mb-8">See it in Action</h2>
      <AnimatedHero />
    </section>

    <section class="text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Build Something Amazing?</h2>
      <p class="text-lg text-gray-700 mb-6">
        This template is your canvas. Let's create!
      </p>
      <Button text="Get Started" href="/contact" />
    </section>
  </main>

  <Footer />
</BaseLayout>
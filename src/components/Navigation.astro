---
// src/components/Navigation.astro
// Universal navigation component with cart functionality
interface Props {
  showCart?: boolean;
}

const { showCart = false } = Astro.props;
const currentPath = Astro.url.pathname;
const isCollectionsPage = currentPath === "/collections";
---

<nav class="bottom-nav">
 
  <a href="/" class="nav-icon-link" data-nav-path="/">
    <i class="fa-sharp fa-castle"></i>
  </a>

  <a
    href="/collections"
    class="nav-icon-link"
    data-nav-path="/collections"
  >
    <i class="fa-sharp fa-scroll"></i>
  </a>

  <a
    href="/sanctum"
    class="nav-icon-link"
    data-nav-path="/sanctum"
  >
    <i class="fa-sharp fa-candle-holder"></i>
  </a>

    <button id="filter-trigger" class="nav-icon-link filter-nav-btn" style={`color: ${isCollectionsPage ? '#B8B8B8' : '#3A3A3A'};`}>
      <i class="fa fa-flask-round-potion"></i>
    </button>
  
  <button id="satchel-btn" class="nav-icon-satchel">
    <i class="fa-sharp fa-briefcase" id="satchel-icon"></i>
    <span id="cart-count" class="cart-badge">0</span>
  </button>
</nav>

<div id="cart-modal" class="cart-modal">
  <div class="cart-modal-content">
    <div class="cart-header">
      <h2>Your Satchel</h2>
      <button id="close-cart" class="close-btn">&times;</button>
    </div>
    <div id="cart-items" class="cart-items">
      <p class="empty-cart">Your satchel awaits ancient wisdom...</p>
    </div>
    <div class="cart-footer">
      <button id="clear-cart" class="clear-cart-btn">Remove all</button>
      <button id="purchase-cart" class="purchase-cart-btn">Purchase</button>
    </div>
  </div>
</div>

<div id="thank-you-modal" class="cart-modal">
  <div class="cart-modal-content">
    <div class="cart-header">
      <h2>Thank you for your purchase!</h2>
      <button id="close-thank-you" class="close-btn">&times;</button>
    </div>
    <div class="cart-items">
      <div class="thank-you-icon">
        <i class="fa-sharp fa-sparkles"></i>
      </div>
      <p class="empty-cart">Your mystical treasures are on their way...</p>
    </div>
    <div class="cart-footer">
      <button id="continue-btn" class="purchase-cart-btn">Continue</button>
    </div>
  </div>
</div>

<script>
  let cart = [];

  function initializeCart() {
    const satchelBtn = document.getElementById("satchel-btn");
    const cartModal = document.getElementById("cart-modal");
    const closeCart = document.getElementById("close-cart");
    const clearCart = document.getElementById("clear-cart");
    const purchaseCart = document.getElementById("purchase-cart");
    const thankYouModal = document.getElementById("thank-you-modal");
    const closeThankYou = document.getElementById("close-thank-you");
    const continueBtn = document.getElementById("continue-btn");

    if (!satchelBtn || !cartModal || !closeCart || !clearCart || !purchaseCart) return;

    satchelBtn.addEventListener("click", () => {
      cartModal.classList.add("active");
      updateCartDisplay();
    });

    closeCart.addEventListener("click", () => {
      cartModal.classList.remove("active");
    });

    clearCart.addEventListener("click", () => {
      cart = [];
      updateCartCount();
      updateCartDisplay();
      updateCartButtons();
    });

    purchaseCart.addEventListener("click", () => {
      if (cart.length > 0) {
        // Empty the cart
        cart = [];
        updateCartCount();
        updateCartDisplay();
        updateCartButtons();
        
        // Close cart modal
        cartModal.classList.remove("active");
        
        // Show thank you modal
        showThankYouModal();
      }
    });

    // Close modal when clicking outside
    cartModal.addEventListener("click", (e) => {
      if (e.target === cartModal) {
        cartModal.classList.remove("active");
      }
    });

    // Thank you modal event listeners
    if (closeThankYou) {
      closeThankYou.addEventListener("click", () => {
        thankYouModal.classList.remove("active");
        setTimeout(() => {
          window.location.href = "/";
        }, 300);
      });
    }

    if (continueBtn) {
      continueBtn.addEventListener("click", () => {
        thankYouModal.classList.remove("active");
        setTimeout(() => {
          window.location.href = "/";
        }, 300);
      });
    }

    // Close thank you modal when clicking outside
    if (thankYouModal) {
      thankYouModal.addEventListener("click", (e) => {
        if (e.target === thankYouModal) {
          thankYouModal.classList.remove("active");
          setTimeout(() => {
            window.location.href = "/";
          }, 300);
        }
      });
    }

    // Initialize button states
    updateCartButtons();
  }

  function addToCart(item) {
    const existingItem = cart.find((cartItem) => cartItem.title === item.title);
    const cartModal = document.getElementById("cart-modal");

    if (!existingItem) {
      cart.push({ ...item, id: Date.now() });
      updateCartCount();
      updateCartButtons();
    }
    cartModal.classList.remove("active");
  }

  function removeFromCart(itemId) {
    cart = cart.filter((item) => item.id !== itemId);
    updateCartCount();
    updateCartDisplay();
    updateCartButtons();
  }

  function updateCartCount() {
    const cartCount = document.getElementById("cart-count");
    const satchelIcon = document.getElementById("satchel-icon");
    if (cartCount) {
      cartCount.textContent = cart.length;
      cartCount.style.display = cart.length > 0 ? "block" : "none";
        satchelIcon.style.color = cart.length > 0 ? "var(--silver)" : "var(--leather-light)";
    }
  }

  function updateCartDisplay() {
    const cartItems = document.getElementById("cart-items");
    if (!cartItems) return;

    if (cart.length === 0) {
      cartItems.innerHTML =
        '<p class="empty-cart">Your satchel awaits mystical treasures...</p>';
      return;
    }

    cartItems.innerHTML = cart
      .map(
        (item) => `
        <div class="cart-item flex justify-between">
          <div class="cart-item-info">
            <h4>${item.title}</h4>
            <p>${item.category}</p>
            <span class="cart-item-price">${item.price}</span>
          </div>
          <div>
            <button class="remove-item-btn" onclick="removeFromCart(${item.id})">
              <i class="fa-sharp fa-shelves" style="--fa-primary-color: #36454F; --fa-secondary-color: #A9A9A9;"></i>
            </button>
          </div>
        </div>
      `
      )
      .join("");
  }

  function updateCartButtons() {
    const clearCart = document.getElementById("clear-cart");
    const purchaseCart = document.getElementById("purchase-cart");
    
    if (clearCart && purchaseCart) {
      const hasItems = cart.length > 0;
      
      // Enable/disable buttons based on cart contents
      clearCart.disabled = !hasItems;
      purchaseCart.disabled = !hasItems;
      
      // Update visual styling
      if (hasItems) {
        clearCart.classList.remove("disabled");
        purchaseCart.classList.remove("disabled");
      } else {
        clearCart.classList.add("disabled");
        purchaseCart.classList.add("disabled");
      }
    }
  }

  function showThankYouModal() {
    const thankYouModal = document.getElementById("thank-you-modal");
    
    if (thankYouModal) {
      thankYouModal.classList.add("active");
      
      // Auto-redirect after 2500ms
      setTimeout(() => {
        thankYouModal.classList.remove("active");
        setTimeout(() => {
          window.location.href = "/";
        }, 300); // Wait for fade out animation
      }, 2500);
    }
  }

  // Make functions available globally
  window.addToCart = addToCart;
  window.removeFromCart = removeFromCart;

  // Initialize navigation active states
  function initializeNavigation() {
    const navLinks = document.querySelectorAll('.nav-icon-link[data-nav-path]');
    const currentPath = window.location.pathname;
    
    // Remove all active classes first
    navLinks.forEach(link => link.classList.remove('active'));
    
    // Add active class to matching link
    navLinks.forEach(link => {
      const linkPath = link.getAttribute('data-nav-path');
      // Handle root path and exact matches
      if (
        (linkPath === '/' && (currentPath === '/' || currentPath === '')) ||
        (linkPath !== '/' && currentPath.startsWith(linkPath))
      ) {
        link.classList.add('active');
      }
    });
  }

  // Initialize when DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    initializeCart();
    initializeNavigation();
  });

  // Re-initialize navigation on page changes (for SPA-like behavior)
  window.addEventListener("popstate", initializeNavigation);
</script>

<style>
  /* Bottom Navigation */
  .bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 50;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    background: rgba(26, 26, 26, 0.95);
    backdrop-filter: blur(20px);
    border-top: 1px solid var(--gold);
    padding: 1rem;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.3);
  }

  /* Navigation Icon Styling */
  .nav-icon-link {
    color: var(--leather-light);
    padding: 0.75rem;
    border-radius: 50%;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    font-size: 1.2rem;
    min-width: 48px;
    min-height: 48px;
    background: transparent;
    border: none;
    cursor: pointer;
  }

  .nav-icon-link:hover {
    color: var(--text-mystical);
    /* border: 1px solid var(--text-mystical); */
  }

  .nav-icon-link.active {
    color: var(--gold);
    /* border: 1px solid var(--gold); */
  }

  .nav-icon-satchel {
    color: var(--leather-light);
    padding: 0.75rem;
    border-radius: 50%;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    font-size: 1.2rem;
    min-width: 48px;
    min-height: 48px;
    background: transparent;
    border: none;
    cursor: pointer;
    position: relative;
  }

  .filter-nav-btn {
    color: var(--half-silver);
  }

  .filter-nav-btn:hover {
    color: var(--silver);
  }

  .cart-badge {
    position: absolute;
    top: 2px;
    right: 2px;
    background: var(--gold);
    color: var(--charcoal);
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: none;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
  }

  /* Cart Modal */
  .cart-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
  }

  .cart-modal.active {
    opacity: 1;
    visibility: visible;
  }

  .cart-modal-content {
    background: linear-gradient(
      135deg,
      var(--parchment-light) 0%,
      var(--parchment) 100%
    );
    border: 2px solid var(--gold);
    border-radius: 12px;
    width: 90%;
    max-width: 500px;
    max-height: 80vh;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }

  .cart-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--gold);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--leather);
    color: var(--parchment);
  }

  .cart-header h2 {
    margin: 0;
    font-size: 1.5rem;
  }

  .close-btn {
    background: none;
    border: none;
    color: var(--parchment);
    font-size: 2rem;
    cursor: pointer;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cart-items {
    padding: 1.5rem;
    max-height: 400px;
    overflow-y: auto;
  }

  .empty-cart {
    text-align: center;
    color: var(--charcoal-light);
    font-style: italic;
  }

  .cart-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-bottom: 1px solid rgba(212, 165, 116, 0.2);
    background: rgba(255, 255, 255, 0.5);
    border-radius: 6px;
    margin-bottom: 0.5rem;
  }

  .cart-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
  }

  .remove-item-btn:hover {
    background: #dc2626;
  }

  .cart-footer {
    padding: 1.5rem;
    border-top: 1px solid var(--gold);
    text-align: center;
  }

  .clear-cart-btn,
  .purchase-cart-btn {
    width: 40%;
    background: var(--leather);
    color: var(--parchment);
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .clear-cart-btn:hover:not(.disabled) {
    background: #dc2626;
  }
  .purchase-cart-btn:hover:not(.disabled) {
    background: #32cd32;
  }

  .clear-cart-btn.disabled,
  .purchase-cart-btn.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    background: var(--charcoal-light) !important;
  }

  .clear-cart-btn.disabled:hover,
  .purchase-cart-btn.disabled:hover {
    background: var(--charcoal-light) !important;
  }

  /* Mobile Optimization */
  @media (max-width: 768px) {
    .bottom-nav {
      gap: 1rem;
      padding: 0.75rem;
    }
    
    .nav-icon-link,
    .nav-icon-satchel {
      min-width: 44px;
      min-height: 44px;
      font-size: 1.1rem;
    }
    
    .cart-modal-content {
      width: 95%;
      margin: 1rem;
    }
  }

  /* Thank You Modal Icon Styling */
  .thank-you-icon {
    text-align: center;
    margin-bottom: 1rem;
  }

  .thank-you-icon i {
    color: var(--gold);
    font-size: 3rem;
    animation: sparkle 2s ease-in-out infinite;
  }

  @keyframes sparkle {
    0%, 100% { 
      transform: scale(1) rotate(0deg);
      opacity: 1;
    }
    50% { 
      transform: scale(1.1) rotate(180deg);
      opacity: 0.8;
    }
  }
</style>

// src/components/interactive/AnimatedHero.astro
// Simple Ken Burns effect - slow zoom and pan only

---

<div class="animated-hero">
  <img 
    src="/images/libraryhero.jpg" 
    alt="Ancient mystical library"
    class="hero-image"
  />
</div>

<style>
  .animated-hero {
    position: relative;
    width: 100%;
    height: 70vh;
    min-height: 500px;
    overflow: hidden;
    /* border-radius: 12px; */
    /* box-shadow: 0 25px 80px rgba(0, 0, 0, 0.4); */
  }

  .hero-image {
    height: 100%;
    width: auto;
    object-fit: cover;
    object-position: bottom left;
    position: absolute;
    bottom: 0;
    left: 0;
    
    /* Ken Burns animation - back and forth pan */
    animation: kenBurnsPan 120s linear infinite alternate;
  }

  @keyframes kenBurnsPan {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(calc(100vw - 100%));
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .animated-hero {
      height: 50vh;
      min-height: 400px;
    }
  }

  @media (max-width: 480px) {
    .animated-hero {
      height: 40vh;
      min-height: 300px;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .hero-image {
      animation: none;
      transform: scale(1.1);
    }
  }
</style>



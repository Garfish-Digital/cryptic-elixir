---
// src/components/common/Button.astro
// A reusable button component.
interface Props {
  text: string;
  href?: string;
  onClick?: () => void;
  variant?: 'primary' | 'secondary';
}

const { text, href, onClick, variant = 'primary' } = Astro.props;

const baseClasses = 'inline-block px-8 py-3 rounded-full font-semibold transition-all duration-300 ease-in-out transform hover:scale-105';
const primaryClasses = 'bg-blue-500 text-white shadow-lg hover:bg-blue-600';
const secondaryClasses = 'bg-gray-200 text-gray-800 hover:bg-gray-300';

const classes = `${baseClasses} ${variant === 'primary' ? primaryClasses : secondaryClasses}`;
---

{href ? (
  <a href={href} class={classes}>
    {text}
  </a>
) : (
  <button onclick={onClick} class={classes}>
    {text}
  </button>
)}